<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ea99e491"
    tools:context="com.shinhan.linearlayout.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onButtonShowImageClicked"
        android:text="Button"/>

<ImageView
    android:id="@+id/imageviewe1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/krw_bill"
    android:background="#ff0000"
    android:padding="3dp"
    android:layout_margin="20dp"/>
<ImageView
    android:id="@+id/imageviewe2"
    android:layout_width="200dp"
    android:layout_height="200dp"
    android:background="@drawable/dollor_bill"
    />

</LinearLayout>
